{
  "manifest_version": 3,
  "name": "RTL Chat AI",
  "version": "1.0.1",
  "description": "Apply RTL direction to chat conversation elements",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.deepseek.com/*",
        "https://chatai.mohaymen.ir/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
